{
  "name": "@aliou/sesame",
  "version": "0.5.1",
  "description": "Semantic search for coding agent sessions",
  "type": "module",
  "bin": {
    "sesame": "./bin/sesame"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "skills",
    "share"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "build:binary": "bun run scripts/build.ts",
    "dev": "./bin/sesame",
    "test": "NODE_OPTIONS=--disable-warning=ExperimentalWarning vitest run",
    "test:cli": "bun test ./test/cli.test.ts",
    "lint": "biome check",
    "format": "biome check --write",
    "check:lockfile": "pnpm install --frozen-lockfile --ignore-scripts",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "semantic-search",
    "coding-agent",
    "pi",
    "sqlite"
  ],
  "pi": {
    "extensions": [
      "./share/pi-extension/src/index.ts"
    ],
    "skills": [
      "./skills"
    ]
  },
  "author": "Aliou Diallo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aliou/sesame"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.26.1",
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": "*"
  },
  "devDependencies": {
    "@aliou/biome-plugins": "^0.3.1",
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.15.30",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.5.0"
  }
}
